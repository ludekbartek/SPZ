<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="cz.dcb.support" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>cz.dcb.support.db.jpa.Roles</class>
    <class>cz.dcb.support.db.jpa.Spz</class>
    <class>cz.dcb.support.db.jpa.Spznote</class>
    <class>cz.dcb.support.db.jpa.Spzstate</class>
    <class>cz.dcb.support.db.jpa.Configuration</class>
    <class>cz.dcb.support.db.jpa.Useraccess</class>
    <class>cz.dcb.support.db.jpa.Sequence</class>
    <class>cz.dcb.support.db.jpa.Project</class>
    <class>cz.dcb.support.db.jpa.Attachment</class>
    <class>cz.dcb.support.db.jpa.User</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/support?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
