<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
      <security-constraint>
        <display-name>Support Access</display-name>
        <web-resource-collection>
            <web-resource-name>DCB Client support app</web-resource-name>
            <description>
               DCB Support application
           </description>
           <!-- <url-pattern>/*</url-pattern>-->
           <!--<url-pattern>/SPZ/*</url-pattern>-->
           <url-pattern>/SPZServlet/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>AllAuthen</description>
            <role-name>user</role-name>
            <role-name>projectManager</role-name>
            <role-name>admin</role-name>
            <role-name>developer</role-name>
            <role-name>client</role-name>
        </auth-constraint>
        
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>SupportRealm</realm-name>
    </login-config>
    <security-role>
        <description>Administrator</description>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <description>Vyvojar/Analytik</description>
        <role-name>developer</role-name>
    </security-role>
    <security-role>
        <description>Projektovy manazer</description>
        <role-name>projectManager</role-name>
    </security-role>
    <security-role>
        <description>Klient</description>
        <role-name>user</role-name>
    </security-role>
    <resource-ref>
        <description>App data source</description>
        <res-ref-name>jdbc/derby-support</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
